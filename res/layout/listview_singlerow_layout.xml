<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single row in ListView: logactivity_layout.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="50dp"
              android:padding="5dp">
    <ImageView
            android:id="@+id/logEntryImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/gray"/>

    <!-- Log event text container -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/logEntryEventText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColor="@color/baby_blue"
                android:textSize="18sp"
                android:text="Event"/>
        <TextView
                android:id="@+id/logEntryEventDetailText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="@color/baby_blue"
                android:textSize="12sp"
                android:text="Bottle"/>
    </LinearLayout>

    <!-- Log event time container -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:id="@+id/logEntryEventTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textColor="@color/baby_blue"
                android:textSize="12sp"
                android:text="20:00"/>
        <TextView
                android:id="@+id/logEntryEventDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textColor="@color/baby_blue"
                android:textSize="12sp"
                android:text="Today"/>
    </LinearLayout>



</LinearLayout>